<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/imageButton_copy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.06"
        app:srcCompat="@android:drawable/ic_menu_more"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="SITE"
        android:textAppearance="@android:style/TextAppearance"
        android:textColorLink="@android:color/holo_red_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:text="PASS"
        android:textAppearance="@android:style/TextAppearance"
        android:textSize="24sp"
        android:layout_below="@+id/imageButton_copy"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton_delete_one"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="0.06"
        app:srcCompat="@android:drawable/ic_menu_delete"
        android:layout_alignBottom="@+id/textView_password"
        android:layout_alignLeft="@+id/imageButton_copy"
        android:layout_alignStart="@+id/imageButton_copy" />

</RelativeLayout>
